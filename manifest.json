{
  "name": "TimeChimp Billability Extension",
  "description": "Adds a billability chart to the TimeChimp page to add Time",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "tabs",
    "cookies",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["https://app.timechimp.com/*"],
      "js": ["moment.js_2.29.4.min.js","highcharts.js","accessibility.js", "charts.js", "add-billibility-chart.js"],
      "css": ["highcharts.css"]
    }
  ],
  "background": {
    "service_worker": "timechimp.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "timechimp.png"
  }
}

