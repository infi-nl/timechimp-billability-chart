{
  "name": "TimeChimp Billability Extension",
  "description": "Adds a billability chart to the TimeChimp page to add Time",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "tabs",
    "cookies",
    "storage",
    "webRequest"
  ],
  "host_permissions": [
    "*://app.timechimp.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://app.timechimp.com/*"
      ],
      "js": [
        "build/content/index.js"
      ],
      "css": [
        "build/content/index.css"
      ]
    }
  ],
  "background": {
    // Works for Google Chrome
    "service_worker": "build/timechimp.js"
    // "scripts": ["build/timechimp.js"] // Works for Firefox. Apply by replacing the service_worker attribute above with this line.
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "timechimp.png"
  }
}

